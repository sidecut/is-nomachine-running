  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cloud Run: Run/Debug Locally",
      "type": "cloudcode.cloudrun",
      "request": "launch",
      "build": {
        "buildpacks": {
          "path": "go.mod",
          "builder": "gcr.io/buildpacks/builder:v1"
        }
      },
      "image": "is-nomachine-running",
      "service": {
        "name": "is-nomachine-running",
        "containerPort": 8080,
        "resources": {
          "limits": {
            "memory": "256Mi"
          }
        }
      },
      "target": {
        "minikube": {}
      },
      "watch": true
    },
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "env": {
        "ISNO_PORT": "1234",
        "ISNO_SSLPORT": "2345"
      },
      "args": []
    }
  ]
}
